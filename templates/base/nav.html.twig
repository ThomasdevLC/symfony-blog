<header class="bg-white shadow-md">
    <nav class="container mx-auto flex justify-between items-center py-4 px-6">
        <!-- Logo -->
        <a href="/" class="text-2xl font-bold text-blue-600">
            <img src="{{ asset('img/blog.jpg') }}" alt="Logo" class="h-10">
        </a>

        <!-- Menu Desktop -->
        <div class="hidden md:flex space-x-6">
            <a href="{{ path('realisations') }}" class="text-gray-700 hover:text-blue-600 transition">Réalisations</a>
            <a href="{{ path('actualites') }}" class="text-gray-700 hover:text-blue-600 transition">Actualités</a>

            <!-- Portfolio avec sous-menu dynamique -->
            <div class="relative group">
                <a href="{{ path('portfolio') }}" class="text-gray-700 hover:text-blue-600 transition">Portfolio</a>

                <!-- Sous-menu -->
                <div class="absolute left-0 hidden group-hover:block bg-white shadow-lg rounded-lg py-2 w-48">
                    {% for categorie in categorieNavbar() %}
                        <a href="{{ path('portfolio_categorie', { 'slug': categorie.slug }) }}" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">
                            {{ categorie.nom }}
                        </a>
                    {% endfor %}
                </div>
            </div>

            <a href="{{ path('a_propos') }}" class="text-gray-700 hover:text-blue-600 transition">À propos</a>
        </div>


        <!-- Bouton Me Contacter -->
        <div class="hidden md:block">
            <a href="{{ path('contact') }}" class="px-4 py-2 bg-blue-600 text-white rounded-lg shadow-md hover:bg-blue-700 transition">
                Me Contacter
            </a>
        </div>

        <!-- Menu Mobile (Hamburger) -->
        <div class="md:hidden">
            <button id="mobile-menu-button" class="focus:outline-none">
                <svg class="h-6 w-6 text-gray-700" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                </svg>
            </button>
        </div>
    </nav>

    <!-- Menu Mobile -->
    <div id="mobile-menu" class="hidden md:hidden bg-white shadow-md">
        <a href="#" class="text-gray-700 hover:text-blue-600 transition">Réalisations</a>
        <a href="#" class="text-gray-700 hover:text-blue-600 transition">Actualités</a>
        <a href="#" class="text-gray-700 hover:text-blue-600 transition">Portfolio</a>
        <a href="#" class="text-gray-700 hover:text-blue-600 transition">À propos</a>
        <a href="#" class="block px-6 py-3 bg-blue-600 text-white text-center hover:bg-blue-700 transition">
            Me Contacter
        </a>
    </div>
</header>

<!-- JavaScript pour activer le menu mobile -->
<script>
    document.getElementById('mobile-menu-button').addEventListener('click', function () {
        document.getElementById('mobile-menu').classList.toggle('hidden');
    });
</script>
