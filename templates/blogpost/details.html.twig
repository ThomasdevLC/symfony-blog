{% extends 'base.html.twig' %}

{% block title %}{{ blogpost.titre }}{% endblock %}

{% block body %}
    <div class="bg-gray-100 min-h-screen flex justify-center items-center py-10">
        <div class="bg-white max-w-2xl w-full shadow-xl rounded-2xl overflow-hidden p-8">
            <h1 class="text-4xl font-extrabold text-gray-800 text-center mb-6">{{ blogpost.titre }}</h1>

            <div class="text-gray-700 text-lg leading-relaxed">
                {{ blogpost.contenu | raw }}
            </div>

            <p class="text-gray-500 text-sm mt-6 text-right">
                Publié le {{ blogpost.createdAt|date('d/m/Y') }}
            </p>

            <!-- Bouton Retour -->
            <div class="mt-8 text-center">
                <a href="{{ path('actualites') }}" class="inline-block px-6 py-3 text-lg font-semibold text-white bg-blue-600 rounded-full shadow-md hover:bg-blue-700 transition duration-300">
                    &larr; Retour aux actualités
                </a>
            </div>
        </div>
    </div>
{% endblock %}
