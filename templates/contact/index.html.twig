
{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="bg-gray-100 min-h-screen flex items-center justify-center py-10">
        <div class="bg-white shadow-lg rounded-lg p-8 max-w-lg w-full">
            <h1 class="text-3xl font-bold text-center mb-6">Contactez-nous</h1>

            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
            <div>
                <label class="block text-gray-700 font-semibold">Nom</label>
                {{ form_widget(form.nom, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-400'}}) }}
                {{ form_errors(form.nom) }}
            </div>

            <div>
                <label class="block text-gray-700 font-semibold">Email</label>
                {{ form_widget(form.email, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-400'}}) }}
                {{ form_errors(form.email) }}
            </div>

            <div>
                <label class="block text-gray-700 font-semibold">Message</label>
                {{ form_widget(form.message, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-400'}}) }}
                {{ form_errors(form.message) }}
            </div>

            <div class="text-center">
                <button type="submit" class="w-full bg-blue-600 text-white font-semibold py-2 rounded-lg hover:bg-blue-700 transition duration-300">
                    Envoyer
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
