<div class="container mx-auto px-4 py-10 bg-white">
    <h1 class="text-3xl font-bold text-center mb-8">Dernières actualités</h1>

    <!-- ✅ Utilisation de "flex" pour mettre 3 cartes par ligne -->
    <div class="flex flex-wrap -mx-4">
        {% for blogpost in blogposts %}
            <div class="w-full md:w-1/3 px-4 mb-6"> <!-- ✅ Chaque carte occupe 1/3 de la largeur -->
                <div class="bg-white shadow-lg rounded-lg overflow-hidden p-6 flex flex-col justify-between h-full">
                    <h2 class="text-xl font-semibold">{{ blogpost.titre }}</h2>
                    <p class="text-gray-700 mt-2">{{ blogpost.contenu | u.truncate(150, '...', false) }}</p>
                    <p class="text-gray-500 text-sm mt-4">{{ blogpost.createdAt|date('d/m/Y') }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
