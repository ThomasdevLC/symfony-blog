{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100 flex items-center justify-center">
        <div class="bg-white shadow-lg rounded-lg p-6 max-w-xl w-full">
            <h1 class="text-3xl font-bold text-blue-600 mb-4 text-center">
                Hello {{ controller_name }}! ✅
            </h1>
            <p class="text-gray-700 text-center">
                This friendly message is coming from:
            </p>
            <ul class="mt-4 space-y-2">
                <li class="flex items-center gap-2 bg-gray-200 p-3 rounded-lg">
                    <span class="text-blue-500">📁</span>
                    <code class="text-gray-900 font-mono">src/Controller/HomeController.php</code>
                </li>
                <li class="flex items-center gap-2 bg-gray-200 p-3 rounded-lg">
                    <span class="text-blue-500">📄</span>
                    <code class="text-gray-900 font-mono">templates/home/index.html.twig</code>
                </li>
            </ul>
            <div class="mt-6 text-center">
                <a href="/" class="px-4 py-2 bg-blue-500 text-white rounded-lg shadow hover:bg-blue-600 transition">
                    Go Home 🏠
                </a>
            </div>
        </div>
    </div>
{% endblock %}
