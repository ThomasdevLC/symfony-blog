{% extends 'base.html.twig' %}

{% block title %}{{ peinture.nom }}{% endblock %}

{% block body %}
    <div class="bg-gray-100 min-h-screen flex justify-center items-center py-10">
        <div class="bg-white max-w-2xl w-full shadow-xl rounded-2xl overflow-hidden p-8">
            <h1 class="text-4xl font-extrabold text-gray-800 text-center mb-6">{{ peinture.nom }}</h1>

            <!-- Image -->
            <div class="flex justify-center mb-6">
                <img src="{{  vich_uploader_asset(peinture,'imageFile')}}" alt="{{ peinture.nom }}" class="w-full max-h-96 object-cover rounded-lg shadow-md">
            </div>

            <!-- Details -->
            <div class="space-y-4 text-gray-700">
                <p class="text-lg"><strong>Largeur :</strong> {{ peinture.largeur ?: 'Non spécifié' }} cm</p>
                <p class="text-lg"><strong>Hauteur :</strong> {{ peinture.hauteur ?: 'Non spécifié' }} cm</p>
                <p class="text-lg"><strong>Réalisée le :</strong> {{ peinture.dateRealisation ? peinture.dateRealisation|date('d/m/Y') : 'Non spécifié' }}</p>

                {% if peinture.enVente %}
                    <p class="text-green-600 text-2xl font-semibold mt-4">En vente : <span class="text-gray-900">{{ peinture.prix ? peinture.prix ~ '€' : 'Prix non spécifié' }}</span></p>
                {% endif %}
            </div>

            <!-- Bouton Retour -->
            <div class="mt-8 text-center">
                <a href="{{ path('realisations') }}" class="inline-block px-6 py-3 text-lg font-semibold text-white bg-blue-600 rounded-full shadow-md hover:bg-blue-700 transition duration-300">
                    &larr; Retour aux réalisations
                </a>
            </div>
        </div>
    </div>
{% endblock %}
