{% extends 'base.html.twig' %}

{% block title %}Hello PeintureController!{% endblock %}

{% block body %}
    <div class="bg-white">
    <div class="container mx-auto px-4 py-10 bg-white max-w-screen-lg"> <!-- ✅ Conteneur centré et limité en largeur -->
        <h1 class="text-3xl font-bold text-center mb-8"> réalisations</h1>

        <!-- ✅ Utilisation de "grid" pour 3 cartes par ligne -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            {% for peinture in peintures %}
                <!-- Card -->
                <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                    <img src="{{ peinture.file }}" alt="Réalisation" class="w-full h-56 object-cover">
                    <div class="p-6 flex flex-col justify-between">
                        <h2 class="text-xl font-semibold">{{ peinture.nom }}</h2>
                        <p class="text-gray-700 mt-2">{{ peinture.description | u.truncate(200, '...', false) }}</p>
                        <p class="text-gray-500 text-sm mt-4">Ajoutée le {{ peinture.createdAt|date('d/m/Y') }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    </div>
{% endblock %}
